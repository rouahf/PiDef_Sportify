

{% block body %}
    <div class="col-md-12 mb-0"><a href="{{ path('app_front') }}">Home</a> <span class="mx-2 mb-0">/</span> <a
     
                href="{{ path('app_front') }}">Store</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">{{ produit.nameProduits }}</strong></div>

    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

    <div class="row">
        <div class="col-md-5 mr-auto">
            <div class="border text-center">
                <img src="{{ asset('/upload/')~produit.getImage()}}" alt="Image" class="img-fluid p-5">
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="text-black">{{ produit.nameProduits}}</h2>


            <p><strong class="text-primary h4">{{ produit.prix }} DNT</strong></p>

 
            <div class="mb-5">
                <div class="input-group mb-3" style="max-width: 220px;">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
                    </div>
                    

                    <div class="input-group-append">
                        <button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
                    </div>

                </div>

            </div>
            {% if app.session.get('email')  !='' %}
                <p><button id="{{ forme.Ajouter.vars.id }}" class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary">Ajouter au panier</button></p>
                {% do form.Ajouter.setRendered %}
                {% do form.idPanier.setRendered %}
                {% do form.idProduit.setRendered %}
                {% do form.prixU.setRendered %}

            {% endif %}



        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

