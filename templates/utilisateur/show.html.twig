{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
<h1 class="text-center my-5">Utilisateur</h1>
<table class="table mx-auto">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ utilisateur.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ utilisateur.nomut }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ utilisateur.prenomut }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ utilisateur.emailut }}</td>
        </tr>
        <tr>
            <th>Mot de passe</th>
            <td>{{ utilisateur.mdput }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ utilisateur.roleutilisateur }}</td>
        </tr>
    </tbody>
</table>

<div class="d-flex justify-content-center my-5">
    <a href="{{ path('app_utilisateur_index', {'id': utilisateur.id}) }}" class="btn btn-success btn-icon-split mx-2">
        <span class="text">go to back</span>
    </a>
    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-success btn-icon-split mx-2">
        <span class="text">edit</span>
    </a>
</div>

{{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}