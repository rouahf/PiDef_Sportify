{% extends 'base.html.twig' %}

{% block title %}Tool index{% endblock %}

{% block body %}
    <h1>Tools</h1>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Returned</th>
                <th>Event</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tool in tools %}
            <tr>
                <td>{{ tool.id }}</td>
                <td>{{ tool.name }}</td>
                <td>{{ tool.returned ? 'Yes' : 'No' }}</td>
                <td>{{ tool.evenement.nom }}</td>
                <td>
                    <a href="{{ path('app_tool_edit', {'id': tool.id}) }}">edit</a>
                    <a href="{{ path('app_remove2_tool', {'id': tool.id}) }}">delete</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-info"> <a href="{{ path('app_tool_new') }}">Create new</a> </button>
</div>
{% endblock %}
