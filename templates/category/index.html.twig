{% extends 'base.html.twig' %}

{% block title %}Category {% endblock %}

{% block body %}
    <h1>Category </h1>
<div class="container">
    <table class="table table-dark table-striped">
  
<div class="mt-5 mb-6 ">
   
 
        <thead>
            <tr>
                <th>Id</th>
                <th>Cat_title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.catTitle }}</td>
                <td>
                <div class="my-2"></div>
                                   <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-success btn-icon-split">
                                        
                                        <span class="text">show</span>
                                    </a>
              <div class="my-2"></div>
                                     <a href="{{ path('app_category_edit', {'id': category.id}) }}"  class="btn btn-success btn-icon-split">
                                      
                                        <span class="text">edit</span>
                                    </a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
<div class="my-2">
                                     <a href="{{ path('app_category_new') }}"  class="btn btn-success btn-icon-split">
                                      
                                        <span class="text">Create new</span>
                                    </a></div>
   
   
{% endblock %}
