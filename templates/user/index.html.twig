{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User </h1>






<div class="container">
    <table class="table table-dark table-striped">

<div class="mt-5 mb-6 ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>*****</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.roleuser }}</td>
                <td>
                 <div class="my-2"></div>
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-success btn-icon-split">
                                        
                                        <span class="text">show</span>
                                    </a>
               <div class="my-2"></div>
                                    <a href="{{ path('app_user_edit', {'id': user.id})}}"  class="btn btn-success btn-icon-split">
                                      
                                        <span class="text">edit</span>
                                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div class="my-2">
         <a href="{{ path('app_user_new') }}" class="btn btn-success btn-icon-split">
                                      
          <span class="text">Create new</span>
        </a></div>
{% endblock %}
